{
    "Manages virtual machines supported by libvirt": {
        "prefix": [
            "community.libvirt.virt",
            "Manages virtual machines supported by libvirt"
        ],
        "body": [
            "- name: ${1:Description}",
            "  # ${99:Comment}",
            "  community.libvirt.virt:",
            "    autostart: ${2|false,true|}",
            "    command: ${3:string}",
            "    name: ${4:string}",
            "    state: ${5:string}",
            "    uri: ${6:qemu:///system}",
            "    xml: ${7:string}",
            "$0"
        ],
        "description": "Manages virtual machines supported by libvirt",
        "scope": "ansible"
    },
    "Manage libvirt network configuration": {
        "prefix": [
            "community.libvirt.virt_net",
            "Manage libvirt network configuration"
        ],
        "body": [
            "- name: ${1:Description}",
            "  # ${99:Comment}",
            "  community.libvirt.virt_net:",
            "    autostart: ${2|false,true|}",
            "    command: ${3:string}",
            "    name: ${4:string}",
            "    state: ${5:string}",
            "    uri: ${6:qemu:///system}",
            "    xml: ${7:string}",
            "$0"
        ],
        "description": "Manage libvirt network configuration",
        "scope": "ansible"
    },
    "Manage libvirt storage pools": {
        "prefix": [
            "community.libvirt.virt_pool",
            "Manage libvirt storage pools"
        ],
        "body": [
            "- name: ${1:Description}",
            "  # ${99:Comment}",
            "  community.libvirt.virt_pool:",
            "    autostart: ${2|false,true|}",
            "    command: ${3:string}",
            "    mode: ${4:string}",
            "    name: ${5:string}",
            "    state: ${6:string}",
            "    uri: ${7:qemu:///system}",
            "    xml: ${8:string}",
            "$0"
        ],
        "description": "Manage libvirt storage pools",
        "scope": "ansible"
    }
}