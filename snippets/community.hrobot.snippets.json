{
    "Set boot configuration": {
        "prefix": [
            "community.hrobot.boot",
            "Set boot configuration"
        ],
        "body": [
            "- name: ${1:Description}",
            "  # ${99:Comment}",
            "  community.hrobot.boot:",
            "    hetzner_password: ${2:string}",
            "    hetzner_user: ${3:string}",
            "    regular_boot: ${9|false,true|}",
            "    server_number: ${11:int}",
            "$0"
        ],
        "description": "Set boot configuration",
        "scope": "ansible"
    },
    "Manage Hetzner's failover IPs": {
        "prefix": [
            "community.hrobot.failover_ip",
            "Manage Hetzner&#39;s failover IPs"
        ],
        "body": [
            "- name: ${1:Description}",
            "  # ${99:Comment}",
            "  community.hrobot.failover_ip:",
            "    failover_ip: ${2:string}",
            "    hetzner_password: ${3:string}",
            "    hetzner_user: ${4:string}",
            "    state: ${5|routed,unrouted|}",
            "    timeout: ${6:180}",
            "    value: ${7:string}",
            "$0"
        ],
        "description": "Manage Hetzner&#39;s failover IPs",
        "scope": "ansible"
    },
    "Retrieve information on Hetzner's failover IPs": {
        "prefix": [
