{
    "Run commands on remote Cisco SMB devices": {
        "prefix": [
            "community.ciscosmb.command",
            "Run commands on remote Cisco SMB devices"
        ],
        "body": [
            "- name: ${1:Description}",
            "  # ${99:Comment}",
            "  community.ciscosmb.command:",
            "    commands:",
            "      - ${2:element}",
            "    interval: ${3:1}",
            "    match: ${4|all,any|}",
            "    retries: ${5:10}",
            "    wait_for:",
            "      - ${6:element}",
            "$0"
        ],
        "description": "Run commands on remote Cisco SMB devices",
        "scope": "ansible"
    },
    "Collect facts from remote devices running Cisco SMB": {
        "prefix": [
            "community.ciscosmb.facts",
            "Collect facts from remote devices running Cisco SMB"
        ],
        "body": [
            "- name: ${1:Description}",
            "  # ${99:Comment}",
            "  community.ciscosmb.facts:",
            "    gather_subset:",
            "      - ${2:element}",
            "$0"
        ],
        "description": "Collect facts from remote devices running Cisco SMB",
        "scope": "ansible"
    }
}